        @Html.DisplayNameFor(model => model.Post)
      </dt>
      <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Post.Title)
      </dd>
      <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Created)
      </dt>
      <dd class="col-sm-10">
